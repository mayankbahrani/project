<% layout("/layout/boilerplate") %>
<div class="row">

    <div class="col-8 offset-2">
         
    <h3>Edit Listing</h3>
     
    <form method="post" class ="needs-validation" action="/listings/<%= listing._id %>?_method=PUT" enctype="multipart/form-data" novalidate>


        <div>
            <label for="title" class="form-label" >Title</label>
            <input required name="listing[title]" placeholder="enter title here" type="text" class="form-control" value="<%= listing.title %>">
        </div>
        
        <div>
            <label for="description" class="form-label" >Description</label>
            <textarea required name="listing[description]" placeholder="enter description here" type="text" class="form-control"  value="<%= listing.description %>"></textarea>
        </div>

       
        
        <div>
            <label for="image" class="form-label" >Upload New Image</label>
            <input name="listing[image]" placeholder="enter image url here" type="file" class="form-control">
        </div>

        <div class="row">

            
            <div class="mb-3 col-4">
                <label for="price" class="form-label" >Price</label>
                <input required name="listing[price]" placeholder="enter price here" type="text" class="form-control" value="<%= listing.price %>">
            </div>
    
            <div class="mb-3 col-8">
                <label for="country" class="form-label" >Country</label>
                <input required name="listing[country]" placeholder="enter country here" type="text" class="form-control" value="<%= listing.country %>">
            </div>
           
            
    

        </div>

        
        <div>
            <label for="location" class="form-label" >Location</label>
            <input name="listing[location]" placeholder="enter location here" type="text" class="form-control" value="<%= listing.location %>">
        </div>

        <br>

        <button class="btn btn-dark">Add</button>




    </form>

</div>

 </div>